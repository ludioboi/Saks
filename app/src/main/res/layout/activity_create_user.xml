<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/layout_result"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center"
        android:gravity="center"
        android:orientation="vertical"
        android:translationY="50dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:layout_margin="10dp"
            android:background="@drawable/transparent_banner"
            android:contentDescription="@string/logo" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:textColor="@color/black"
                android:layout_marginBottom="10dp"
                android:text="Erstellen Sie einen neuen User"/>

            <EditText
                android:id="@+id/editTextFirstName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:autofillHints=""
                android:background="@drawable/rounded_text"
                android:textStyle="bold"
                android:ems="10"
                android:hint="@string/firstname"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:textColor="@color/black"
                android:textColorHint="#546E7A" />

            <EditText
                android:id="@+id/editLastName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:autofillHints=""
                android:background="@drawable/rounded_text"
                android:ems="10"
                android:textStyle="bold"
                android:hint="@string/Lastname"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:textColor="@color/black"
                android:textColorHint="#546E7A"
                android:translationY="5dp" />

            <TextView
                android:text="Optional"
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:textSize="15sp"
                android:layout_marginTop="20dp"/>

            <EditText
                android:id="@+id/editSecondname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:autofillHints=""
                android:background="@drawable/rounded_text"
                android:ems="10"
                android:hint="@string/secondname"
                android:inputType="textPassword"
                android:minHeight="48dp"
                android:textColor="@color/black"
                android:textColorHint="#546E7A"
                android:translationY="5dp" />

            <EditText
                android:id="@+id/editTextRole"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:autofillHints=""
                android:background="@drawable/rounded_text"
                android:ems="10"
                android:hint="@string/role"
                android:inputType="textPassword"
                android:minHeight="48dp"
                android:textColor="@color/black"
                android:textColorHint="#546E7A"
                android:translationY="5dp" />

            <EditText
                android:id="@+id/editTextID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:autofillHints=""
                android:background="@drawable/rounded_text"
                android:ems="10"
                android:hint="@string/id"
                android:inputType="textPassword"
                android:minHeight="48dp"
                android:textColor="@color/black"
                android:textColorHint="#546E7A"
                android:translationY="5dp" />

            <EditText
                android:id="@+id/editTextShortName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:autofillHints=""
                android:background="@drawable/rounded_text"
                android:ems="10"
                android:hint="@string/shortname"
                android:inputType="textPassword"
                android:minHeight="48dp"
                android:textColor="@color/black"
                android:textColorHint="#546E7A"
                android:translationY="5dp" />

            <EditText
                android:id="@+id/editTextPermLevel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:autofillHints=""
                android:background="@drawable/rounded_text"
                android:ems="10"
                android:hint="@string/permlevel"
                android:inputType="textPassword"
                android:minHeight="48dp"
                android:textColor="@color/black"
                android:textColorHint="#546E7A"
                android:translationY="5dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_gravity="bottom|center"
                android:orientation="vertical"
                android:translationY="10dp">

                <Button
                    android:id="@+id/createuserButton"
                    style="@style/Theme.Saks"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/icon_red_sec"
                    android:text="Erstellen"
                    android:gravity="center"
                    android:textColorHighlight="@color/icon_red"
                    android:textColorLink="@color/icon_red"
                    android:translationY="10dp"
                    app:layout_anchor="@+id/layout_result"
                    tools:ignore="TouchTargetSizeCheck" />
            </LinearLayout>
        </LinearLayout>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <com.google.android.material.bottomappbar.BottomAppBar
        android:id="@+id/bottomAppBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:backgroundTint="@color/icon_red"
        tools:ignore="VisualLintBottomAppBar" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>